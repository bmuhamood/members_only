<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <% if user_signed_in? %>
        <th>Title</th>
        <th>Body</th>
        <th>Username</th>
        <th>email</th>
        <th>Created_at</th>
      <% else %>
        <th>Title</th>
        <th>Body</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if user_signed_in? %>
          <td><%= post.title  %></td>
          <td><%= post.body  %></td>
          <td><%= post.user.username %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        <% else %>
          <td><%= post.title  %></td>
          <td><%= post.body  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% else %>
  <%= link_to 'Log In', new_user_session_path %>
<% end %>
